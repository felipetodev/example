{
  "name": "turborepo-basic-shared",
  "version": "1.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "semantic-release": "semantic-release --extends ./.releaserc.json --branches main"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.15"
}
